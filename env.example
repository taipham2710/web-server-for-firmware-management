# --- Server Configuration ---
PORT=3000

# Directory to store database and firmware files.
# For Docker/K8s, this should point to a mounted volume, e.g., /data
DATA_DIR=./

# Comma-separated list of allowed origins for CORS
ALLOWED_ORIGINS=http://localhost:3000

# --- API Authentication ---
# Secret token for management APIs (history, delete, export)
API_TOKEN=your_super_secret_token_here_change_this_in_production

# Secret token for CI/CD pipeline to upload firmware
UPLOAD_TOKEN=ci_cd_upload_token_change_this_too

# --- Logging ---
# Log level (e.g., error, warn, info, http, verbose, debug, silly)
LOG_LEVEL=info

# Database
DATABASE_PATH=./firmware.db 